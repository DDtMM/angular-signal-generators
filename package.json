{
  "name": "signal-generators-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:demo": "ng build demo --base-href /angular-signal-generators/ & npx typedoc --out dist/demo/browser/api  & npx cpy ./dist/demo/browser/index.html ./ --rename 404.html",
    "build:signal-generators": "ng build signal-generators & npm run test-for-build & npm run generate-coverage-badge & npx cpy ./README.md ./dist/signal-generators & npx cpy ./LICENSE ./dist/signal-generators",
    "demo:add-current-api-docs": "npx typedoc --out projects/demo/src/api",
    "demo:add-current-api-json": "npx typedoc --json projects/demo/src/api/api.json",
    "demo:add-demo-file-collections": "node scripts/create-demo-file-collections.mjs",
    "watch": "ng build --watch --configuration development ",
    "test": "ng test signal-generators",
    "test-for-build": "ng test signal-generators --code-coverage true --watch false",
    "generate-coverage-badge": "npx istanbul-badges-readme --coverageDir=\"./coverage/signal-generators\"",
    "lint": "ng lint",
    "serve:ssr:demo": "ng build demo --verbose true --configuration development --watch true & node dist/demo/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.0.1",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/platform-server": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@angular/ssr": "^20.0.0",
    "@fortawesome/angular-fontawesome": "^1.0.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@stackblitz/sdk": "^1.10.0",
    "express": "^5.0.0",
    "highlight.js": "^11.9.0",
    "ngx-highlightjs": "^14.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.6.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/express": "^5.0.0",
    "@types/jasmine": "~5.1.8",
    "@types/node": "^22.15.27",
    "@typescript-eslint/eslint-plugin": "^8.21.1",
    "@typescript-eslint/parser": "^8.21.1",
    "angular-eslint": "^19.6.0",
    "autoprefixer": "^10.4.19",
    "browser-sync": "^3.0.4",
    "cpy-cli": "^5.0.0",
    "daisyui": "^5.0.42",
    "eslint": "^9.27.0",
    "glob": "^11.0.2",
    "istanbul-badges-readme": "^1.9.0",
    "jasmine-core": "~5.7.1",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-mocks": "^14.13.5",
    "ng-packagr": "^20.0.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.0.0",
    "typedoc": "0.28.5",
    "typescript": "~5.8.3"
  }
}