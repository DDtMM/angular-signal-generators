{
  "name": "signal-generators-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:demo": "ng build demo --base-href /angular-signal-generators/ & npx typedoc --out dist/demo/browser/api  & npx cpy ./dist/demo/browser/index.html ./ --rename 404.html",
    "build:signal-generators": "ng build signal-generators & npm run test-for-build & npm run generate-coverage-badge & npx cpy ./README.md ./dist/signal-generators & npx cpy ./LICENSE ./dist/signal-generators",
    "demo:add-current-api-docs": "npx typedoc --out projects/demo/src/api",
    "demo:add-current-api-json": "npx typedoc --json projects/demo/src/api/api.json",
    "demo:add-demo-file-collections": "node scripts/create-demo-file-collections.mjs",
    "watch": "ng build --watch --configuration development ",
    "test": "ng test signal-generators",
    "test-for-build": "ng test signal-generators --code-coverage true --watch false",
    "generate-coverage-badge": "npx istanbul-badges-readme --coverageDir=\"./coverage/signal-generators\"",
    "lint": "ng lint",
    "serve:ssr:demo": "ng build demo --verbose true --configuration development --watch true & node dist/demo/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/cdk": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/platform-server": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@angular/ssr": "^18.0.1",
    "@fortawesome/angular-fontawesome": "^0.15.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-brands-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@stackblitz/sdk": "^1.10.0",
    "express": "^4.19.2",
    "highlight.js": "^11.9.0",
    "ngx-highlightjs": "^12.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.6"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.1",
    "@angular/cli": "^18.0.1",
    "@angular/compiler-cli": "^18.0.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "angular-eslint": "^18.3.1",
    "autoprefixer": "^10.4.19",
    "browser-sync": "^3.0.0",
    "cpy-cli": "^5.0.0",
    "daisyui": "^4.12.13",
    "eslint": "^9.12.0",
    "glob": "^10.4.5",
    "istanbul-badges-readme": "^1.9.0",
    "jasmine-core": "~5.3.0",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-mocks": "^14.12.2",
    "ng-packagr": "^18.0.0",
    "postcss": "^8.4.47",
    "sonicware-tdt": "^20.0.0",
    "tailwindcss": "^3.4.13",
    "typedoc": "^0.26.9",
    "typescript": "~5.4.5",
    "typescript-eslint": "^8.8.1"
  }
}
